    hierarchyNodes = {
        nodes: <?php echo $treeNodes ?>,
        removedNodes: $A(),
        initialize: function(){
            this.increment = 0;
            this.pageIdentifiers = $H({});
            this.tree = new Ext.tree.TreePanel('tree-container', {
                animate: false,
                loader: false,
                enableDD: true,
