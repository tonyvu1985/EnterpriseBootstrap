                <?php endif;?>
            <?php endforeach;?>
            <?php if ($this->canCreateWishlists($this->getWishlists())): ?>
                <li class="new" onclick="Enterprise.Wishlist.moveItemToNew(<?php echo $item->getId();?>, Enterprise.Wishlist.getRowQty($(this).up('tr')));"><span title="<?php echo $this->__('Create New Wishlist')?>"><?php echo $this->__('Create New Wishlist')?></span></li>
            <?php endif;?>
        </ul>
    </div>
