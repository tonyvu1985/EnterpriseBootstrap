/**
 * Gift registry items template
 *
 * @see Enterprise_GiftRegistry_Block_Items
 */
?>
<?php
    $_itemsCount = count($this->getItems());
?>
<!--<h2 class="subtitle"><?php echo $this->__('Gift Registry Items') ?></h2>-->
<form action="<?php echo $this->getActionUrl() ?>" method="post">
    <?php echo $this->getBlockHtml('formkey') ?>
    <fieldset>
        <ul class="list">
            <?php foreach($this->getItems() as $_item): ?>
                <?php echo $this->getItemHtml($_item) ?>
            <?php endforeach ?>
        </ul>
        <?php if ($_itemsCount): ?>
        <div class="buttons-set">
            <button type="submit" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-update"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
        </div>
        <?php endif; ?>
    </fieldset>
</form>
<?php if (!$_itemsCount): ?>
    <p><?php echo $this->__('Gift Registry has no items.') ?></p>
<?php endif; ?>
