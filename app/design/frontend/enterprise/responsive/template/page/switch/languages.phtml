/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
              
<?php if(count($this->getStores())>1): ?>
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="current language-<?php echo $this->escapeHtml(Mage::app()->getStore()->getCode()) ?>">
            <?php echo $this->escapeHtml(Mage::app()->getStore()->getName()) ?>
        </span><b class="caret"></b>
        <ul class="dropdown-menu" id="popId-languageSelect">
            <li class="dropdown-header">LANGUAGE USE</li>
            <li class="divider"></li>
            <li class="current language-<?php echo $this->escapeHtml(Mage::app()->getStore()->getCode()) ?>">
                <span><?php echo $this->escapeHtml(Mage::app()->getStore()->getName()) ?></span>
            </li>
            <?php foreach ($this->getStores() as $_lang): ?>
                <?php if($_lang->getId()!=$this->getCurrentStoreId()): ?>
                    <li class="language-<?php echo $this->escapeHtml($_lang->getCode()); ?>">
                        <a href="<?php echo $_lang->getCurrentUrl() ?>"><?php echo $this->escapeHtml($_lang->getName()) ?></a>
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ul>
<?php endif; ?>