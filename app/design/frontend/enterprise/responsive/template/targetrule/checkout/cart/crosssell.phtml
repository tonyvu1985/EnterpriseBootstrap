<?php if ($this->hasItems()):?>
<div class="crosssell">
    <div class="row" style="margin-bottom: 20px">
        <div class="col-xs-6">
            <h2><?php echo $this->__('Related product') ?></h2>
        </div>
        <div class="col-xs-6 text-right">
            <a class="jcarousel-prev"><i class="fa fa-angle-up"></i></a><br/>
            <a class="jcarousel-next"><i class="fa fa-angle-down"></i></a>
        </div>
    </div>
    
    <div class="jcarousel-vertical">
        <ul>
        <?php foreach ($this->getItemCollection() as $_item): ?>
            <li class="item">
                <a class="product-image" href="<?php echo $this->getProductUrl($_item) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(75); ?>" width="75" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
                <div class="product-shop">
                    <h3 class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h3>
                    <?php echo $this->getPriceHtml($_item, true) ?>
                    <p><button class="button btn-cart btn btn-default btn-xs" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')" type="button"><?php echo $this->__('Add to Cart') ?></button></p>
                    <ul class="add-to-links">
                        <?php if ($this->helper('wishlist')->isAllow()) : ?>
                        <li><a href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="link-wishlist"><i class="fa fa-gift fa-lg"></i></a></li>
                        <?php endif; ?>
                        <?php if($_compareUrl=$this->getAddToCompareUrl($_item)): ?>
                        <li><a href="<?php echo $_compareUrl ?>"><i class="fa fa-files-o"></i></a></li>
                        <?php endif; ?>
                    </ul>
                </div>
            </li>
        <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif;?>

  <script>
    jQuery(function() {
        // create instance
        jQuery('.jcarousel-vertical').jcarousel({
            vertical: true,
            scroll: 1
        });

        jQuery('.jcarousel-prev').click(function() {
            jQuery('.jcarousel-vertical').jcarousel('scroll', '-=1');
        });

        jQuery('.jcarousel-next').click(function() {
            jQuery('.jcarousel-vertical').jcarousel('scroll', '+=1');
        });
    });
</script>

