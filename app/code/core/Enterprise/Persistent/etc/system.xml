<config>
    <sections>
        <persistent>
            <groups>
                <options>
                    <fields>
                        <shopping_cart translate="label" module="persistent">
                            <backend_model>enterprise_persistent/adminhtml_system_config_cart</backend_model>
                        </shopping_cart>
                        <wishlist translate="label" module="enterprise_persistent">
                            <label>Persist Wishlist</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </wishlist>

                        <recently_ordered translate="label" module="enterprise_persistent">
                            <label>Persist Recently Ordered Items</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </recently_ordered>

                        <compare_current translate="label" module="enterprise_persistent">
                            <label>Persist Currently Compared Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </compare_current>

                        <compare_history translate="label" module="enterprise_persistent">
                            <label>Persist Comparison History</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </compare_history>

                        <recently_viewed translate="label" module="enterprise_persistent">
                            <label>Persist Recently Viewed Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>120</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </recently_viewed>

                        <customer translate="label" module="enterprise_persistent">
                            <label>Persist Customer Group Membership and Segmentation</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>enterprise_persistent/adminhtml_system_config_customer</frontend_model>
                            <backend_model>enterprise_persistent/adminhtml_system_config_customer</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>130</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </customer>
                    </fields>
                </options>
            </groups>
        </persistent>
    </sections>
</config>
